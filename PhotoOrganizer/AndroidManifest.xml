<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.baloch.photoorganizer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="12"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="pictureorganizer.activity.permission.MAPS_RECEIVE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.baloch.photoorganizer.Activity_Login"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.baloch.photoorganizer.Activity_MainOption"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.baloch.photoorganizer.Activity_SaveImage"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.baloch.photoorganizer.Activity_GalleryFolder"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.baloch.photoorganizer.Activity_SelectLocation"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>

        <uses-library android:name="com.google.android.maps" />

        <activity
            android:name="com.baloch.photoorganizer.ViewGallery"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.baloch.photoorganizer.PhotoShow"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.baloch.photoorganizer.PhotoSearch"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.baloch.photoorganizer.AddPlace"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="com.baloch.photoorganizer.GalleryMap"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.baloch.photoorganizer.StartScreen"
            android:label="@string/title_activity_start_screen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.baloch.photoorganizer.Settings"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.baloch.photoorganizer.Register"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="com.baloch.photoorganizer.FolderGallery"
            android:label="@string/title_activity_folder_gallery" >
        </activity>
    </application>

</manifest>