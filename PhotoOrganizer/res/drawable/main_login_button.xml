<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape xmlns:android="http://schemas.android.com/apk/res/android">
            <corners android:radius="20dp" />

            <solid android:color="#7db3db" />

            <stroke android:width="1dp" android:color="#ffe" />
        </shape></item>
    <item android:state_pressed="false"><shape xmlns:android="http://schemas.android.com/apk/res/android">
            <corners android:radius="20dp" />

            <solid android:color="#2a75bf" />

            <stroke android:width="1dp" android:color="#ffe" />
        </shape></item>
    <item><shape xmlns:android="http://schemas.android.com/apk/res/android">
            <corners android:radius="20dp" />

            <solid android:color="#5798c6" />

            <stroke android:width="2dp" android:color="#ffe" />
        </shape></item>

</selector>