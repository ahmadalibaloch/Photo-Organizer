<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background" >

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btn_main_search"
        android:layout_marginTop="21dp"
        android:background="#ddd" />

    <EditText
        android:id="@+id/txt_main_search"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="41dp"
        android:layout_toLeftOf="@+id/btn_main_search"
        android:ems="10"
        android:hint="search photos" />

    <ImageButton
        android:id="@+id/btn_main_search"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/txt_main_search"
        android:layout_marginRight="14dp"
        android:src="@drawable/search" />

    <ImageButton
        android:id="@+id/btn_main_newPic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/view1"
        android:layout_marginRight="39dp"
        android:layout_marginTop="47dp"
        android:src="@drawable/camera" />

    <ImageButton
        android:id="@+id/btn_main_import"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/btn_main_newPic"
        android:layout_below="@+id/btn_main_newPic"
        android:layout_marginTop="10dp"
        android:src="@drawable/im" />

    <ImageButton
        android:id="@+id/btn_main_gallery"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/btn_main_import"
        android:layout_below="@+id/btn_main_import"
        android:layout_marginTop="10dp"
        android:src="@drawable/gallery" />

    <ImageButton
        android:id="@+id/btn_main_map"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/btn_main_gallery"
        android:layout_below="@+id/btn_main_gallery"
        android:layout_marginTop="10dp"
        android:src="@drawable/map" />

    <TextView
        android:id="@+id/tm1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/view1"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="60dp"
        android:text="Cupture Photo"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tm2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tm1"
        android:layout_alignTop="@+id/btn_main_import"
        android:layout_marginTop="14dp"
        android:text="Import Photos"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tm2"
        android:layout_alignTop="@+id/btn_main_gallery"
        android:layout_marginTop="14dp"
        android:text="View Gallery"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView1"
        android:layout_alignTop="@+id/btn_main_map"
        android:layout_marginTop="16dp"
        android:text="Map Gallery"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignParentBottom="true"
        android:padding="25dp"
        android:shadowColor="#fff"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="15"
        android:text="Photo Organizer"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>